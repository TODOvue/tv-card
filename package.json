{
  "name": "@todovue/tv-card",
  "private": false,
  "author": "Cristhian Daza",
  "description": "TvCard is a customizable and flexible card component for Vue 3 applications, ideal for showcasing content with a title, image, description, and action buttons. It supports additional elements like secondary buttons and labels for enhanced interactivity and visual structure.",
  "license": "MIT",
  "version": "1.0.6",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TODOvue/tv-card.git"
  },
  "bugs": {
    "url": "https://github.com/TODOvue/tv-card/issues"
  },
  "keywords": [
    "todovue",
    "front-end",
    "web",
    "vue",
    "vuejs",
    "vue-js",
    "card",
    "show-card",
    "vue-card",
    "vue-card-component"
  ],
  "exports": {
    ".": {
      "import": "./dist/tv-card.es.js",
      "require": "./dist/tv-card.cjs.js"
    },
    "./style.css": "./dist/tv-card.css",
    "./nuxt": "./nuxt.js"
  },
  "main": "dist/tv-card.cjs.js",
  "module": "dist/tv-card.es.js",
  "types": "dist/tv-card.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "nuxt.js"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "dist/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "cp README.md public/ && cp CHANGELOG.md public/ && VITE_BUILD_TARGET=demo vite build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@todovue/tv-button": "^1.2.2",
    "@todovue/tv-label": "^1.1.1"
  },
  "devDependencies": {
    "@todovue/tv-demo": "^1.1.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "sass": "^1.0.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.0.0"
  }
}
